<form action="<%= cat_url(@cat) %> " method="POST">
    <input type="hidden" name="_method" value="PATCH">

    <label for="name">Name</label>
    <input type="text" name="cat[name]" id="name" value="<%= @cat.name %>"> 
    <br>

    <label for="color">Color</label>
    <select name="cat[color]" id="color">
        <option disabled>-- Select a Color --</option>
        <option value="Black" <%= @cat.color == "Black" ? "selected" : ""  %>>Black</option>
        <option value="White" <%= @cat.color == "White" ? "selected" : ""  %>>White</option>
        <option value="Orange"<%= @cat.color == "Orange" ? "selected" : ""  %>>Orange</option>
        <option value="Purple"<%= @cat.color == "Purple" ? "selected" : ""  %>>Purple</option>
    </select>
    <br>
    
    <label for="birth_date">Birthdate</label>
    <input type="date" name="cat[birth_date]" id="birth_date" value="<%= @cat.birth_date %>">
    <br>

    <label for="sex">Sex |</label>
    <label for="M">Male</label>
    <input type="radio" name="cat[sex]" id="sex" value="M" <%= @cat.sex == "M" ? "checked" : ""  %>>
    <label for="F">Female</label>
    <input type="radio" name="cat[sex]" id="sex" value="F" <%= @cat.sex == "F" ? "checked" : ""  %>>
    <br>

    <label for="description">Description</label>
    <textarea name="cat[description]" id="description" cols="30" rows="10"><%= @cat.description %></textarea>
    <br>

    <input type="submit" value="Submit Changes ✍️">
</form>